<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".upload_an_event"
    android:background="@color/blue_light"
    android:theme="@style/ThemeOverlay.AppCompat">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="UPLOAD AN EVENT"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:id="@+id/txtview_upload_event"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="note: If you upload an event you will be considered as a
faculty coordinator for the event"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:padding="10dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/txtview_upload_event"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Event Name"
        android:padding="5dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/edttext_eventname"
        android:layout_below="@id/txtview_upload_event"
        android:background="#ffffff"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Event date"
        android:padding="5dp"
        android:layout_margin="15dp"
        android:id="@+id/edttext_eventdate"
        android:layout_below="@id/edttext_eventname"
        android:background="#ffffff"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter student coordinator Rollno"
        android:padding="5dp"
        android:layout_margin="15dp"
        android:id="@+id/edttext_eventcoordinator_student"
        android:layout_below="@id/edttext_eventdate"
        android:background="#ffffff"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_insert_image"
        android:layout_below="@id/edttext_eventcoordinator_student"
        android:layout_margin="15dp"
        android:textColor="#ffffff"
        android:background="@color/blue_dark"
        android:text="Attach Event Poster"
        android:textAllCaps="false"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_insert_preview"
        android:layout_below="@id/btn_insert_image"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@id/btn_upload"/>
    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/Widget.MaterialComponents.LinearProgressIndicator"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_above="@id/btn_upload"
        android:layout_below="@id/img_insert_preview"
        android:layout_marginBottom="25dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UPLOAD"
        android:background="@color/blue_dark"
        android:id="@+id/btn_upload"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:textColor="#ffffff"
        android:textSize="18sp"/>
</RelativeLayout>
